<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:custom ="http://schemas.android.com/apk/res-auto">
    <com.lkl.ansuote.hdqlibrary.widget.EditTextCountView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:hint="自定义editText实现右下角显示字数"
        android:layout_gravity="center"
        custom:countColor="@android:color/holo_red_light"
        android:maxLength="@integer/edit_text_count_max_length"
        custom:countPadding="16dp"
        custom:countSize="14sp"/>
</LinearLayout>