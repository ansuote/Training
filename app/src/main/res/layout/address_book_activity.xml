<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <Button
        android:id="@+id/btn_insert_phone"
        style="@style/BaseNormalBtnStyle"
        android:text="号码插入到通讯录" />

    <Button
        android:id="@+id/btn_create_group"
        style="@style/BaseNormalBtnStyle"
        android:text="创建群组"/>

    <Button
        android:id="@+id/btn_query_group_data"
        style="@style/BaseNormalBtnStyle"
        android:text="查看通讯录分组信息" />

    <Button
        android:id="@+id/btn_query_phone"
        style="@style/BaseNormalBtnStyle"
        android:text="查询手机号码是否存在通讯录"/>

    <Button
        android:id="@+id/btn_save_to_group"
        style="@style/BaseNormalBtnStyle"
        android:text="保存联系人到分组"/>



    <Button
        android:id="@+id/btn_query_by_group_id"
        style="@style/BaseNormalBtnStyle"
        android:text="查询 groupId 对应的所有成员" />


</LinearLayout>
