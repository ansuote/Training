<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/btn_create_group"
            style="@style/BaseNormalBtnStyle"
            android:text="创建群组"/>

        <Button
            android:id="@+id/btn_insert_phone"
            style="@style/BaseNormalBtnStyle"
            android:text="批量插入" />


        <Button
            android:id="@+id/btn_query_group_data"
            style="@style/BaseNormalBtnStyle"
            android:text="获取所有分组" />

        <Button
            android:id="@+id/btn_query_phone"
            style="@style/BaseNormalBtnStyle"
            android:text="号码是否存在通讯录？"/>

        <Button
            android:id="@+id/btn_query_phone_or_name"
            style="@style/BaseNormalBtnStyle"
            android:text="通过号码或者姓名查找"/>

        <Button
            android:id="@+id/btn_save_to_group"
            style="@style/BaseNormalBtnStyle"
            android:text="保存联系人到分组"/>

        <Button
            android:id="@+id/btn_query_by_group_id"
            style="@style/BaseNormalBtnStyle"
            android:text="查询 groupId 对应的所有成员" />

        <Button
            android:id="@+id/btn_add_or_update"
            style="@style/BaseNormalBtnStyle"
            android:text="批量同步（新增或更新）"/>

        <Button
            android:id="@+id/btn_delete_all"
            style="@style/BaseNormalBtnStyle"
            android:text="删除所有联系人"/>

        <Button
            android:id="@+id/btn_add_contacts"
            style="@style/BaseNormalBtnStyle"
            android:text="新增联系人"/>

        <Button
            android:id="@+id/btn_remove_contacts"
            style="@style/BaseNormalBtnStyle"
            android:text="删除联系人"/>

        <Button
            android:id="@+id/btn_add_contacts_special"
            style="@style/BaseNormalBtnStyle"
            android:text="新增联系人-业务代码测试"/>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
