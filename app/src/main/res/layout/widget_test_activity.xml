<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="20dp">

    <TextView
        android:id="@+id/tv_wildcard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/tv_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/tv_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="增加下滑线"/>

    <TextView
        android:id="@+id/tv_line_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AppCompat 样式的时候,默认字体为粗体；英文是大写的，无法设置成小写 abc 123"/>

    <Button
        style="@style/OriginalBtnStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AppCompat 样式的时候,默认字体为粗体；英文是大写的，无法设置成小写 abc 123"/>

    <Button
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="按钮去除阴影"/>


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="原始checkbox"/>

    <!--You can color directly in the xml. Use buttonTint for the box: (as of API level 23)-->

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="颜色checkbox"
        app:buttonTint="@color/colorPrimaryDark"/>

</LinearLayout>
